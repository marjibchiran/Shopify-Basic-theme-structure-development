<div class="list-collections-template">
  <div class="container">
    <div class="header">
      <h2>{{ page_title | escape }}</h2>
    </div>
    <div class="main-collections my-5">
      <div class="row">
        {% for collection in collections %}
          {% unless collection.handle contains 'frontpage' %}
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <div class="collection-img">
                    <img
                      src="{{ collection.featured_image | image_url:width='200' }}"
                      width="100%"
                      height="100%"
                      alt="{{ collection.title | escape }}"
                    >
                  </div>
                </div>
                <div class="card-footer text-center">
                  <h4 class="collection-title">{{ collection.title | escape | link_to: collection.url }}</h4>
                </div>
              </div>
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
